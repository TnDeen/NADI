@model MVC5.Models.IndexViewModel
@{
    ViewBag.Title = "CreateCus";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CreateCus</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm("CreateCus", "Manage", FormMethod.Post))
{
    <div class="form-horizontal">
       
        <div class="form-group">
            @Html.LabelFor(model => model.CurrentUser.ParentId, "Penjual", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ParentID", null, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" name="submitButton" value="Search" class="btn btn-default" />
            </div>
        </div>
    </div>

}

