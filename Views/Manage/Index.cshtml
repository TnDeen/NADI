@model MVC5.Models.IndexViewModel
@using MVC5.Common

<script src="~/Scripts/clipboard.min.js"></script>
<script>
    var btn = document.getElementById('btn');
    var clipboard = new Clipboard('.btn');
    clipboard.on('success', function(e) {
        console.log(e);
    });
    clipboard.on('error', function(e) {
        console.log(e);
    });
</script>

<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="content-page">

            

            <div class="blog-tags margin-bottom-20">
                <h2>Akaun Ahli (@Model.CurrentUser.NomborAhli - @Model.accstatus)</h2>
                <ul>
                    <li><a href="@MyConstant.Base_Url/Manage/Edit/@Model.CurrentUser.Id"><i class="fa fa-tags"></i>Kemaskini Maklumat</a></li>
                    <li><a href="@MyConstant.Base_Url/Manage/ApplyMembership"><i class="fa fa-tags"></i>Permohonan Keahlian</a></li>


                    
                    @if (Model.HasPassword)
                    {
                        <li><a href="@MyConstant.Base_Url/Manage/ChangePassword"><i class="fa fa-tags"></i>Tukar Kata Laluan</a></li>                    }
                    else
                    {
                        <li><a href="@MyConstant.Base_Url/Manage/SetPassword"><i class="fa fa-tags"></i>Set Kata Laluan</a></li>
                    }

                    <li>
                        <a href="#">
                            <i class="fa fa-tags"></i>Notifikasi <span class="badge badge-danger">
                                @Model.totalChild
                            </span>
                        </a>
                    </li>
                    
                    

                    
                </ul>
            </div>

            

                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                    <div class="dashboard-stat blue-madison">
                        <div class="visual">
                            <i class="fa fa-comments"></i>
                        </div>
                        <div class="details">
                            <div class="number">
                                @Html.DisplayFor(model => model.potentialPoint)
                            </div>
                            <div class="desc">
                                Potential Points
                            </div>
                        </div>
                        <a class="more" href="#">
                            View more <i class="m-icon-swapright m-icon-white"></i>
                        </a>
                    </div>
                </div>

                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                    <div class="dashboard-stat red-intense">
                        <div class="visual">
                            <i class="fa fa-bar-chart-o"></i>
                        </div>
                        <div class="details">
                            <div class="number">
                                @Html.DisplayFor(model => model.wallet)
                            </div>
                            <div class="desc">
                                Current Points
                            </div>
                        </div>
                        <a class="more" href="#">
                            View more <i class="m-icon-swapright m-icon-white"></i>
                        </a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                    <div class="dashboard-stat green-haze">
                        <div class="visual">
                            <i class="fa fa-shopping-cart"></i>
                        </div>
                        <div class="details">
                            <div class="number">
                                @Html.DisplayFor(model => model.totalChild)
                            </div>
                            <div class="desc">
                                Registerer
                            </div>
                        </div>
                        <a class="more" href="@MyConstant.Base_Url/Transaction/Index">
                            View more <i class="m-icon-swapright m-icon-white"></i>
                        </a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                    <div class="dashboard-stat purple-plum">
                        <div class="visual">
                            <i class="fa fa-globe"></i>
                        </div>
                        <div class="details">
                            <div class="number">
                                @Html.DisplayFor(model => model.accstatus)
                            </div>
                            <div class="desc">
                                Account Status
                            </div>
                        </div>
                        <a class="more" href="#">
                            View more <i class="m-icon-swapright m-icon-white"></i>
                        </a>
                    </div>
                </div>
            </div>



    </div>
    </div>



<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="content-page">
            <!-- BEGIN SAMPLE TABLE PORTLET-->
            <div class="portlet box red">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-cogs"></i>Manfaat Keahlian
        </div>
    </div>
    @if (!Model.CurrentUser.EmailConfirmed)
    {
        <div class="portlet-body">
            <div class="note note-success">
                <h4 class="block">Manfaat Keahlian Hanya Bagi Ahli Sah Nadi Kebangsaan.</h4>
                </div>
            </div>
                }
                @if (Model.CurrentUser.EmailConfirmed)
                {

                    <div class="portlet-body">
                        <div class="note note-success">
                            <h4 class="block">Kad Keahlian</h4>
                            <p>
                                Sah Sehingga : @Model.TarikhTamatKeahlian
                            </p>
                            <div class="tiles">
                                <div class="tile image double selected">
                                    <div class="tile-body">
                                        <img src="~/Content/img/kadahli.jpg" alt="">
                                    </div>
                                    <div class="tile-object">
                                        <div class="name" style="height:100px;">
                                            <h4><strong>NADI MEMBER</strong> </h4>
                                            <br />
                                            @Model.CurrentUser.NomborAhli
                                            <br />
                                            @Model.CurrentUser.Nama
                                        </div>
                                        <div class="number">
                                            @Model.TarikhTamatKeahlian
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="note note-success">
                            <h4 class="block">Voucher Penginapan</h4>
                            <span class="label label-danger">
                                NOTE!
                            </span>
                            Sila Pilih Tarikh Penginapan 3 bulan dari tarikh kelulusan. <a href="@MyConstant.Base_Url/Manage/ApplyMembership">Semak Tarikh.</a>

                            <br />
                            <br />
                            <p>
                                Tarikh Penginapan : @Model.tarikhPenginapan
                            </p>
                            <div class="tiles">
                                <div class="tile image double selected">
                                    <div class="tile-body">
                                        <img src="~/Content/img/hilidayvoucher.jpg" alt="">
                                    </div>
                                    <div class="tile-object">
                                        <div class="name">
                                            Langkawi
                                        </div>
                                        <div class="number">
                                            2 hari 1 malam
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="note note-success">
                            <h4 class="block">Khairat Kematian</h4>
                            <span class="label label-danger">
                                NOTE!
                            </span>
                            Sila Kemaskini Maklumat Waris. <a href="@MyConstant.Base_Url/Manage/Edit/@Model.CurrentUser.Id">Kemaskini  Maklumat</a>

                            <br />
                            <br />
                            <p>
                                Nama Waris : @Model.CurrentUser.NamaWaris
                            </p>
                            <p>
                                No Telefon Waris : @Model.CurrentUser.NomborTelefonWaris
                            </p>
                        </div>

                    </div>

                }

            </div>
        </div>
        </div>
</div>

<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="content-page">
            <!-- BEGIN SAMPLE TABLE PORTLET-->
            <div class="portlet box red">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-cogs"></i>User Link
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="input-group">
                        <span class="input-group-btn">
                            <button id="btn" class="btn red" data-clipboard-target="#foo">Copy Link</button>
                        </span>
                        <input id="foo" type="text" class="form-control" value="@Model.userLink">
                    </div>
                    
                   
                        <img src="/Manage/BarcodeImage" />
                   
                </div>
            </div>
        </div>
    </div>
    </div>


    
