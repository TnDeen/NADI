@model MVC5.Models.IndexViewModel
@using MVC5.Common

<script src="~/Scripts/clipboard.min.js"></script>
<script>
    var btn = document.getElementById('btn');
    var clipboard = new Clipboard('.btn');
    clipboard.on('success', function(e) {
        console.log(e);
    });
    clipboard.on('error', function(e) {
        console.log(e);
    });
</script>

<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="content-page">

            

            <div class="blog-tags margin-bottom-20">
                <h2>Akaun Ahli (@Model.CurrentUser.NomborAhli - @Model.accstatus)</h2>
                <ul>
                    <li><a href="@MyConstant.Base_Url/Manage/Edit/@Model.CurrentUser.Id"><i class="fa fa-tags"></i>Edit Profiles</a></li>
                    <li><a href="@MyConstant.Base_Url/Manage/ApplyMembership"><i class="fa fa-tags"></i>Apply Membership</a></li>


                    
                    @if (Model.HasPassword)
                    {
                        <li><a href="@MyConstant.Base_Url/Manage/ChangePassword"><i class="fa fa-tags"></i>Change your password</a></li>                    }
                    else
                    {
                        <li><a href="@MyConstant.Base_Url/Manage/SetPassword"><i class="fa fa-tags"></i>Create Password</a></li>
                    }
                    
                    

                    
                </ul>
            </div>

            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                <div class="dashboard-stat blue-madison">
                    <div class="visual">
                        <i class="fa fa-comments"></i>
                    </div>
                    <div class="details">
                        <div class="number">
                            @Html.DisplayFor(model => model.potentialPoint)
                        </div>
                        <div class="desc">
                            Potential Points
                        </div>
                    </div>
                    <a class="more" href="#">
                        View more <i class="m-icon-swapright m-icon-white"></i>
                    </a>
                </div>
            </div>

            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                <div class="dashboard-stat red-intense">
                    <div class="visual">
                        <i class="fa fa-bar-chart-o"></i>
                    </div>
                    <div class="details">
                        <div class="number">
                            @Html.DisplayFor(model => model.wallet)
                        </div>
                        <div class="desc">
                            Current Points
                        </div>
                    </div>
                    <a class="more" href="#">
                        View more <i class="m-icon-swapright m-icon-white"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                <div class="dashboard-stat green-haze">
                    <div class="visual">
                        <i class="fa fa-shopping-cart"></i>
                    </div>
                    <div class="details">
                        <div class="number">
                            @Html.DisplayFor(model => model.totalChild)
                        </div>
                        <div class="desc">
                            Registerer
                        </div>
                    </div>
                    <a class="more" href="@MyConstant.Base_Url/Transaction/Index">
                        View more <i class="m-icon-swapright m-icon-white"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                <div class="dashboard-stat purple-plum">
                    <div class="visual">
                        <i class="fa fa-globe"></i>
                    </div>
                    <div class="details">
                        <div class="number">
                            @Html.DisplayFor(model => model.accstatus)
                        </div>
                        <div class="desc">
                            Account Status
                        </div>
                    </div>
                    <a class="more" href="#">
                        View more <i class="m-icon-swapright m-icon-white"></i>
                    </a>
                </div>
            </div>
        </div>



    </div>
    </div>

