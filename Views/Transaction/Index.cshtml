@model PagedList.IPagedList<MVC5.Models.Listing>
@using MVC5.Common
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="content-page">
    

    <div class="row" >


        <h2>Upload Data Dari Excel</h2>

        <p>
            @Html.ActionLink("Download Template", "DownloadFile")
        </p>

        @using (Html.BeginForm("Upload", "Transaction", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form-horizontal">
                <div class="form-group">

                    <div class="col-md-10">
                        <input type="file" name="UploadedFile" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" name="Submit" value="Submit" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

        <div class="col-md-12">
          
                <div class="portlet-body">
                    <div class="table-scrollable">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        
                                        @Html.ActionLink("Nama", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
                                    </th>
                                    <th>
                                        
                                        @Html.ActionLink("Title", "Index", new { sortOrder = ViewBag.DateSortParm, currentFilter = ViewBag.CurrentFilter })
                                    </th>
                                    <th>
                                        Content
                                    </th>
                                    <th>
                                        Date
                                    </th>
                                </tr>
                            </thead>
                            <tbody>


                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Address1)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Address1)
                                    </td>
                                    <td>
                                       @Html.DisplayFor(modelItem => item.Address1)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Address1)
                                    </td>
                                </tr>
                                }



                            </tbody>
                        </table>

                        <br />
                        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

                        @Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
                    </div>
                </div>
           
            <!-- END SAMPLE TABLE PORTLET-->

        </div>

       
    </div>
    <div class="row">
        <div class="col-md-6">
            <a href="/Manage/Index" class="btn blue">
                Back to My Account
            </a>
        </div>
    </div>
</div>
