@model MVC5.Models.Message
@using MVC5.Common
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
         <!--breadcrumbs start-->
<ul class="breadcrumb">
    <li><a href="index.html">Home</a></li>
    <li class="active">@ViewBag.Title</li>
</ul>
<!--breadcrumbs end-->
        <div class="row margin-bottom-40">
            <!-- BEGIN CONTENT -->
            <div class="col-md-12">
                <h1>Contact Us</h1>
                <div class="content-page">
                    <div class="row">
                     
                        <div class="col-md-9 col-sm-9">
                            

                            <!-- BEGIN FORM-->
                           @using (Html.BeginForm("Contact", "Home", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
                           {
                            <div class="form-horizontal">
                                <h4>Drop us a line so that we can hear from you</h4>
                                
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Sender, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Sender, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Sender, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Subject, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Perihal, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.TextAreaFor(model => model.Perihal, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Perihal, "", new { @class = "text-danger" })
                                    </div>
                                </div>



                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Send Message" class="btn btn-success" />
                                    </div>
                                </div>
                            </div>
                                <hr />
                           }
                            <!-- END FORM-->
                        </div>
                        <div class="col-md-3 col-sm-3 sidebar2">
                            <h1>
                               Address
                            </h1>
                            @Html.Action("GetArticleContent", "Home", new { articleKod = "ARTCL_TYPE_ADDRESS" })
                        </div>
                    </div>
                </div>
            </div>
            <!-- END CONTENT -->
        </div>
