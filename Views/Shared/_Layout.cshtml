@using MVC5.Common
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Nadikebangsaan.com</title>

    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta content="Metronic Shop UI description" name="description">
    <meta content="Metronic Shop UI keywords" name="keywords">
    <meta content="keenthemes" name="author">
    <meta property="og:site_name" content="-CUSTOMER VALUE-">
    <meta property="og:title" content="-CUSTOMER VALUE-">
    <meta property="og:description" content="-CUSTOMER VALUE-">
    <meta property="og:type" content="website">
    <meta property="og:image" content="-CUSTOMER VALUE-"><!-- link to image for socio -->
    <meta property="og:url" content="-CUSTOMER VALUE-">
    <link rel="shortcut icon" href="~/Content/img/favicon.ico">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <script>
    window.fbAsyncInit = function () {
        FB.init({
            appId: '881388775290574',
            xfbml: true,
            version: 'v2.5'
        });
    };

    (function (d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) { return; }
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/en_US/sdk.js";
        fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));


    
    </script>

</head>
<body id="page-top" class="index">

    <div id="fb-root"></div>
    <script>
        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/en_GB/sdk.js#xfbml=1&version=v2.5&appId=881388775290574";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));</script>



    <!-- END BEGIN STYLE CUSTOMIZER -->
    <!-- BEGIN TOP BAR -->
    <div class="pre-header">
        <div class="container">
            <div class="row">
                <!-- BEGIN TOP BAR LEFT PART -->
                <div class="col-md-6 col-sm-6 additional-shop-info">
                    <ul class="list-unstyled list-inline">
                        <li><i class="fa fa-phone"></i><span>+60 10862 0466</span></li>
                        <li><i class="fa fa-envelope-o"></i><span>info@nadikebangsaan.com</span></li>
                    </ul>
                </div>
                <!-- END TOP BAR LEFT PART -->
                <!-- BEGIN TOP BAR MENU -->
                @Html.Partial("_LoginPartial")
                <!-- END TOP BAR MENU -->
            </div>
        </div>
    </div>
    <!-- END TOP BAR -->
    <!-- BEGIN HEADER -->
    <div class="header">
        <div class="container">
            <a class="site-logo" href="/Home"><img src="~/Content/img/nadilogo.png" style="width:32px; height:32px;" alt="Metronic FrontEnd"></a>
            <a href="javascript:void(0);" class="mobi-toggler"><i class="fa fa-bars"></i></a>
            <!-- BEGIN NAVIGATION -->
            <div class="header-navigation pull-right font-transform-inherit">
                <ul>
                    <li>
                        @Html.ActionLink("Laman Utama", "Index", "Home", new { area = "" }, null)
                    </li>


                    @*<li>
                            @Html.ActionLink("Blog", "Index", "Student", new { area = "" }, null)
                        </li>*@
                    
                    @if (Request.IsAuthenticated)
                    {
                        <li>
                            @Html.ActionLink("Terma dan Syarat", "Tnc", "Home", new { area = "" }, null)
                        </li>
                        <li>
                            @Html.ActionLink("Laman Ahli", "Index", "Manage", new { area = "" }, null)
                        </li>
                        
                    }
                    @if (User.IsInRole(MyConstant.Role_Admin))
                    {
                        <li>
                            @Html.ActionLink("Membership Request", "MembershipRequest", "Transaction", new { area = "" }, null)
                        </li>
                        <li>
                            @Html.ActionLink("Claim Request", "ClaimRequestList", "Transaction", new { area = "" }, null)
                        </li>
                        

                    }


                </ul>
            </div>
            <!-- END NAVIGATION -->
        </div>
    </div>
    <!-- Header END -->



    <div class="main">
        <div class="container">
            @RenderBody()
        </div>
        @*<div class="container">
            <div class="row">
                <div class="col-md-12 col-sm-12">
                    <div class="content-page">
                        <div class="fb-like" data-href="https://developers.facebook.com/docs/plugins/" data-layout="standard" data-action="like" data-show-faces="true" data-share="true"></div>
                    </div>
                </div>
            </div>
            </div>*@
        </div>
    
                <!-- BEGIN PRE-FOOTER -->
                <div class="pre-footer">
                    <div class="container">
                        <div class="row">
                            <!-- BEGIN BOTTOM ABOUT BLOCK -->
                            <div class="col-md-4 col-sm-6 pre-footer-col">
                                <h2>About us</h2>
                                <p>Pertubuhan Pembangunan Intergeriti Malaysia [PPM-018-10-27022016] (National Association Development Integrity) </p>
                                <p>
                                    Dikenali sebagai  NADI Kebangsaan. Sebuah Pertubuhan
                                    (NGO) Berdaftar beroreantasikan aktiviti Keusahawan, Reakreasi, Latihan, Sukan dan Kebajikan.
                                </p>
                            </div>
                            <!-- END BOTTOM ABOUT BLOCK -->
                            <!-- BEGIN BOTTOM CONTACTS -->
                            <div class="col-md-4 col-sm-6 pre-footer-col">
                                <h2>Our Contacts</h2>
                                <address class="margin-bottom-40">
                                    No. 99-1,<br>
                                    Jalan LP 7/2, <br>
                                    Bandar Putra Permai,<br>
                                    43300, Seri Kembangan.<br>
                                    Email: <a href="mailto:info@nadikebangsaan.com">info@nadikebangsaan.com</a><br>
                                    Tel: <a href="#">0108620466</a>
                                </address>

                            </div>
                        </div>
                    </div>
                </div>
                <!-- END PRE-FOOTER -->
                <!-- BEGIN FOOTER -->
                <div class="footer">
                    <div class="container">
                        <div class="row">
                            <!-- BEGIN COPYRIGHT -->
                            <div class="col-md-6 col-sm-6 padding-top-10">
                                <p>&copy; @DateTime.Now.Year - Nadikebangsaan.com</p>
                            </div>
                            <!-- END COPYRIGHT -->
                            <!-- BEGIN PAYMENTS -->
                            <div class="col-md-6 col-sm-6">
                                <ul class="social-footer list-unstyled list-inline pull-right">
                                    <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                                    <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                                    <li><a href="#"><i class="fa fa-dribbble"></i></a></li>
                                    <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
                                    <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                                    <li><a href="#"><i class="fa fa-skype"></i></a></li>
                                    <li><a href="#"><i class="fa fa-github"></i></a></li>
                                    <li><a href="#"><i class="fa fa-youtube"></i></a></li>
                                    <li><a href="#"><i class="fa fa-dropbox"></i></a></li>
                                </ul>
                            </div>
                            <!-- END PAYMENTS -->
                        </div>
                    </div>
                </div>
                <!-- END FOOTER -->
                @Scripts.Render("~/bundles/jquery")
                @Scripts.Render("~/bundles/bootstrap")
                @RenderSection("scripts", required: false)
