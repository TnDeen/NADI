@model MVC5.Models.VM.ListingVO
@using MVC5.Common
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<div class="component-bg">
    <div class="container">
        <!-- Forms
        ================================================== -->
        <div class="bs-docs-section mar-b-30">

            <!-- Sequence Modern Slider -->
            @using (Html.BeginForm("Index", "Listing", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
            {



                <div class="bg-gray" style="padding-top:20px;">


                    <div class="container">
                        <div class="row">
                            <div class="form-group col-md-3 wow fadeInRight">

                                @Html.DropDownList("PropertyTypeId", null, htmlAttributes: new { @class = "form-control newsletter-input" })


                            </div>

                            <div class="form-group col-md-2 wow fadeInRight">

                                @Html.DropDownList("NegeriID", null, htmlAttributes: new { @class = "form-control newsletter-input" })


                            </div>

                            <div class="form-group col-md-2 wow fadeInRight">

                                @Html.DropDownList("ListingTypeId", null, htmlAttributes: new { @class = "form-control newsletter-input" })




                            </div>

                            <div class="form-group col-md-4">


                                <div class="input-group wow fadeInRight">
                                    @Html.EditorFor(model => model.search.Address, new { htmlAttributes = new { @class = "form-control newsletter-input", @placeholder = "Enter Location Name" } })
                                    <span class="input-group-btn">
                                        <button class="btn btn-inverse btn-hg" type="submit" name="submit">Search</button>
                                    </span>
                                </div>



                            </div>

                        </div><!-- /row -->


                        <div class="row">

                            <div class="form-group col-md-12 wow fadeInRight">


                                <button class="btn btn-danger" type="submit" name="submit">Go To Advance Search</button>



                            </div>

                        </div><!-- /row -->


                    </div><!-- /container -->


                </div>
            }






            <div class="row">




                <div class="col-lg-9 ">
                    <h2 id="forms-example">@Model.listing.Address1</h2>
                    <h4>@Model.listing.PropertyType.Nama</h4>
                    <div class="blog-item">
                        <div class="row">

                            <div class="col-lg-6 col-sm-6">
                                <div class="blog-img">
                                    @if (Model.listing.imageUrl == null)
                                    {
                                        <img src="~/Content/img/property-type/default/@Model.listing.PropertyTypeId@MyConstant.file_jpg" alt="" />
                                    }
                                    else
                                    {
                                        <img src="~/Content/img/property-type/@Model.listing.imageUrl" alt="" />
                                    }

                                </div>

                            </div>
                            <div class="col-lg-6 col-sm-6">
                                <table class="table">

                                    <tbody>
                                        <tr>
                                            <td>
                                                Auction Price
                                            </td>
                                            <td>
                                                <strong>RM @Model.listing.Price</strong>
                                            </td>
                                        </tr>

                                        <tr>
                                            <td>
                                                Auction Date
                                            </td>
                                            <td>
                                                <strong>RM @Model.listing.AuctionDate</strong>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                Built up
                                            </td>
                                            <td>
                                                <strong>RM @Model.listing.Size (Sq.ft)</strong>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                Auction Price
                                            </td>
                                            <td>
                                                <strong>RM @Model.listing.Price</strong>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                Deposit
                                            </td>
                                            <td>
                                                <strong>10 %</strong>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                Restriction
                                            </td>
                                            <td>
                                                <strong>No Info</strong>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>

                            </div>
                        </div>
                        <div class="row">

                            <div class="col-lg-12 col-sm-12">
                                <h1>
                                    Premium Info
                                </h1>
