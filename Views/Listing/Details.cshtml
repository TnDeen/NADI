                                            <td>
                                                <strong>@Model.listing.Assignor</strong>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                              @Html.ActionLink("Go Back", "Index", "Listing", new { address = Model.search.Address }, htmlAttributes: new { @class = "btn btn-danger right" })

